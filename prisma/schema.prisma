// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attempts    Attempt[]
  reflections Reflection[]

  @@map("users")
}

enum ModuleType {
  WORKING_MEMORY
  PROCESSING_SPEED
  NOTICING
  REFLECTIVE_PRACTICE
}

model Module {
  id          String     @id @default(uuid())
  title       String
  description String
  type        ModuleType
  order       Int        @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  tasks Task[]

  @@map("modules")
}

enum TaskType {
  DIGIT_SPAN
  READING_SPAN
  LEXICAL_DECISION
  SENTENCE_VERIFICATION
  FORM_MEANING_MAPPING
  ERROR_CORRECTION
  GUIDED_REFLECTION
  FREE_REFLECTION
}

model Task {
  id           String   @id @default(uuid())
  moduleId     String
  title        String
  description  String
  type         TaskType
  instructions String
  config       Json // Task-specific configuration (e.g., word lists, sentences, etc.)
  order        Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  module   Module    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  attempts Attempt[]

  @@unique([moduleId, order])
  @@map("tasks")
}

model Attempt {
  id           String   @id @default(uuid())
  userId       String
  taskId       String
  startTime    DateTime
  endTime      DateTime
  response     Json // User's response data
  score        Float // Calculated score
  accuracy     Float? // Percentage accuracy
  reactionTime Float? // Average reaction time in milliseconds
  metadata     Json? // Additional scoring metadata
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([userId, taskId])
  @@index([userId, createdAt])
  @@map("attempts")
}

model Reflection {
  id        String   @id @default(uuid())
  userId    String
  content   String
  tags      String[] // e.g., ["working_memory", "improvement"]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("reflections")
}
